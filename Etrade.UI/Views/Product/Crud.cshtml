@model Etrade.UI.Models.ProductModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container pb-5">
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products.Id" class="control-label"></label>
                <input asp-for="Products.Id" class="form-control" />
                <span asp-validation-for="Products.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                    <input asp-for="Products.ProductName" class="form-control" />
                    <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Description" class="control-label"></label>
                <input asp-for="Products.Description" class="form-control" />
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitPrice" class="control-label"></label>
                    <input asp-for="Products.UnitPrice" class="form-control" />
                    <span asp-validation-for="Products.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Stock" class="control-label"></label>
                <input asp-for="Products.Stock" class="form-control" />
                <span asp-validation-for="Products.Stock" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Products.isApproved" /> @Html.DisplayNameFor(model => model.Products.isApproved)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Products.isHome" /> @Html.DisplayNameFor(model => model.Products.isHome)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Products.imgUrl" class="control-label"></label>
                <input asp-for="Products.imgUrl" class="form-control" />
                <span asp-validation-for="Products.imgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.CategoryId" class="control-label"></label>
                <input asp-for="Products.CategoryId" class="form-control" />
                <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action ="List" class="btn btn-warning">Cancel</a>
            </div>
        </form>
    </div>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
