@model Etrade.UI.Models.UsersModel

<div class="container pb-5">
    <h1>Yeni Kullanıcı Oluştur</h1>
    <p style="color:red">@Model.Error</p>
<div class="row">
    <div class="col-md-7">
        <form method="post">
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="User.Mail" required type="text" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Şifre</label>
                <div class="col-sm-10">
                    <input asp-for="User.Password" required type="text" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">İsim Soyisim</label>
                <div class="col-sm-10">
                    <input asp-for="User.EntityName" required type="text" class="form-control">
                </div>
            </div>
           
           
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Cadde</label>
                <div class="col-sm-10">
                    <input asp-for="User.Street" required type="text" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Sokak</label>
                <div class="col-sm-10">
                    <input asp-for="User.Avenue" required type="text" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">No</label>
                <div class="col-sm-10">
                    <input asp-for="User.No" required type="text" class="form-control">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">İlçe</label>
                    <div class="col-sm-10">
                <select asp-for="User.CountyId" class="form-control">
                    @foreach (var item in Model.Counties)
                    {
                        <option value="@item.Id">@item.Description</option>
                    }
                </select>
                    </div>
            </div>
            <input class="btn btn-success" type="submit" value="Kaydol" />
        </form>
    </div>
</div>
</div>
