@using Etrade.Entity.Concretes
@model Products

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div id="product-details" class="container pb-5">
    <div class="row">

        <div class="col-md-6">
            <img src="@Model.imgUrl" class="img-fluid rounded ">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.ProductName</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    @if (Model.isApproved && Model.Stock>0)
                    {
                        <span class="badge badge-primary">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }

                    <span class="product-number">#@Model.Id</span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description" class="readmore">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half-o" aria-hidden="true"></i>
@*                    <span class="badge badge-success">53</span>
*@@*                    <a href="#">Write a review</a>
*@                        
                    
                </div>
 
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <span id="product-price">@Model.UnitPrice TL</span>
                </div>
            </div>
            <div class="row mt-2">
                @if (Model.Stock > 0)
                {
                                  <div class="col-md-12">
                        @using (Html.BeginForm("Create", "BasketMaster"))
                        {
                            @Html.HiddenFor(i=>i.Id)
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                Sepete Ekle
                            </button>
                        }
                    </div>
                }
                else{
                   <div class="col-md-12">
                        <a href="/User/List" class="btn btn-primary">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                            Alışverişe Devam Et
                        </a>
                       </div>
                }
  
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Ürün Açıklaması</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                        <p>@Model.Description</p>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>